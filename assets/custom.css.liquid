    margin-top: 26px;
}
.template--page
.rte img {
    border: 0;
}

.template--page .page-width .rte > div img {
    margin-top: 53px;
}

.template--page main#MainContent {
    margin-top: 108px;
    margin-bottom: 91px;
}

