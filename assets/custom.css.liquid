.collection .card--media .card__inner .card__content {
    padding: 16px;
    display: block;
}
.collection
.badge {
    font-family: Helvetica Neue;
    font-size: 18px;
    font-style: normal;
    font-weight: 500;
    line-height: 120%; /* 21.6px */
    text-transform: uppercase;
    letter-spacing: 0;
    border-radius: 0;
    padding: 4px 3.5px;
}
.collection
.card__badge {
    align-self: flex-start;
}
.collection
.card--standard.card--media .card__inner .card__information {display: none;}
.template--page
h1.page-title {
    font-family: Helvetica Neue;
    font-size: 24px;
    font-style: normal;
    font-weight: 400;
    line-height: 100%; /* 24px */
    text-transform: uppercase;
    margin-bottom: 41px;
    text-align: center;
    color: #070707;
}
.template--page
.rte,.template--page .rte div {
    font-family: Helvetica Neue;
    font-size: 18px;
    font-style: normal;
